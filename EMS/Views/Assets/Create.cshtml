@model EMS.Models.Asset

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EMS.styles.css" asp-append-version="true" />
</head>
<body>

    <h4>Asset</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="AssetType" class="control-label">Asset Type</label>
                    <select asp-for="AssetType" class="form-control">
                        <option value="Car">Car</option>
                        <option value="Appliance">Appliance</option>
                        <option value="Furniture">Stationary</option>
                        <option value="Food">Food</option>
                    </select>
                    <span asp-validation-for="AssetType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Purpose" class="control-label"></label>
                    <input asp-for="Purpose" class="form-control" />
                    <span asp-validation-for="Purpose" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="adminId" class="control-label"></label>
                    <select asp-for="adminId" class="form-control" asp-items="ViewBag.adminId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="employeeId" class="control-label"></label>
                    <select asp-for="employeeId" class="form-control" asp-items="ViewBag.employeeId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="col-md-8">
            <img src="~/assetss.jpg" />
        </div>
    </div>

</body>
</html>
